{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Project Structure */
    "rootDir": "src",
    "outDir": "dist",

    /* Interop & Compatibility */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Safety */
    "strict": true,
    "skipLibCheck": true,

    /* Runtime */
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
